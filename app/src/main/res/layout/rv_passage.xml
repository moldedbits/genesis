<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/cvPassage"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_2x"
    android:layout_marginTop="@dimen/margin_x"
    android:background="?attr/selectableItemBackground"
    android:layout_marginBottom="@dimen/margin_2x"
    android:layout_marginLeft="@dimen/margin_2x"
    android:layout_marginRight="@dimen/margin_2x">

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/passage_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/row_height_8x"
        android:gravity="center"
        android:textSize="@dimen/text_3x"
      />
    <TextView
        android:id="@+id/difficulty"
        android:layout_width="match_parent"
        android:layout_height="@dimen/row_height_8x"
        android:layout_alignParentRight="true"
        android:textSize="@dimen/text_x"
        />
</RelativeLayout>

</android.support.v7.widget.CardView>